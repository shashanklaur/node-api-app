doctype html
html
  head
    title Manage Projects
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container
      h1 Manage Projects
      form(action="/admin/projects/add" method="POST")
        div.mb-3
          label(for="title") Project Title:
          input.form-control(type="text" id="title" name="title" required)
        div.mb-3
          label(for="description") Description:
          textarea.form-control(id="description" name="description" required)
        div.mb-3
          label(for="link") Project Link:
          input.form-control(type="text" id="link" name="link" required)
        button.btn.btn-primary(type="submit") Add Project
      br
      a(href="/admin") Back to Admin Panel
