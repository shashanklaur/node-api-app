doctype html
html
  head
    title Manage Skills
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container
      h1 Manage Skills
      form(action="/admin/skills/add" method="POST")
        div.mb-3
          label(for="name") Skill Name:
          input.form-control(type="text" id="name" name="name" required)
        div.mb-3
          label(for="level") Proficiency Level:
          select.form-control(id="level" name="level" required)
            option(value="Beginner") Beginner
            option(value="Intermediate") Intermediate
            option(value="Advanced") Advanced
        button.btn.btn-primary(type="submit") Add Skill
      br
      a(href="/admin") Back to Admin Panel
